# Environment Configuration for Distributed Stack Overflow Scraper
# Copy this to .env and fill in your specific values

# Redis Configuration (for task coordination)
REDIS_HOST=your-redis-host.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=100

# Database Configuration  
MONGO_URI=mongodb://your-mongo-host:27017/
MONGO_DB=stackoverflow_scraper

# Alternative PostgreSQL (optional)
POSTGRES_URI=postgresql://user:password@your-postgres-host/stackoverflow

# Scraping Configuration
MAX_WORKERS=5
QUESTIONS_PER_WORKER=100
MIN_DELAY=2.0
MAX_DELAY=5.0
HEADLESS=true
TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=10.0

# AWS Configuration
AWS_REGION=us-east-1
EC2_INSTANCE_ID=
S3_BUCKET=your-stackoverflow-scraper-bucket
MIN_INSTANCES=1
MAX_INSTANCES=20

# Monitoring Configuration
HEALTH_CHECK_PORT=8080
METRICS_PORT=9090
LOG_LEVEL=INFO

# Worker Configuration
WORKER_ID=main-orchestrator
INSTANCE_TYPE=local

# Target Configuration  
TARGET_QUESTIONS=100000
DUPLICATE_BATCH_SIZE=1000

# Security (for shutdown endpoint)
SHUTDOWN_KEY=your-secure-shutdown-key